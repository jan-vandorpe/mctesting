{% extends "template/layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

{% endblock stylesheets %}

{% block title %}
    {{ parent() }}Tests
{% endblock title%}


{% block content %}
<div class="container-fluid ">
    <h1 class="headerofpage">Testlijst</h1>
</div>
<div class="container-fluid ">
    <form name="testtebewerken" action="{{app.root}}/testadmin/changeuserstatus" method="post" id="testForm">


        <div class="headergebroverzicht">
            <!-- header boven de gebr info-->
            <div class="row onderheadertebewerken form-control">
                <div class="col-xs-4">Test naam</div>
                <div class="col-xs-2">maxduur</div>
                <div class="col-xs-2">aantal vragen</div>
                <div class="col-xs-2"></div>
                <div class="col-xs-2"></div>
            </div>
        </div>

        <!-- OVERZICHT TESTEN -->
        {% if tests is empty %}
            <p class="info-tekst">U heeft nog geen testen  aangemaakt.</p>
        {% else %}
            {% for test in tests %}   
            <div class="input-group volle-breedte">                    
                <span class="input-group-addon addon-finetune">
                    <input type="checkbox" name="testCheckbox[]" value="{{test.TestId}}" />
                </span>

                <div class="row gebruiktebewerken form-control volle-breedte">

                    <div class="col-xs-4">{{test.TestName}}</div>
                    <div class="col-xs-2">{{test.TestMaxDuration}}</div>
                    <div class="col-xs-2">{{test.TestQuestionCount}}</div>
                    {% if test.status == 1 %}
                            <div class="col-xs-2">Actief</div>
                        {% else %}
                            <div class="col-xs-2">Inactief</div>
                        {% endif %}
                    <div class="col-xs-2">
                        <a href="{{ app.root }}/test/rundummy/{{ test.TestId }}">dummytest</a>
                    </div>

                </div>
            </div>
            {% endfor %}
        {% endif %}
        

        <!-- DE BEWERKINGSKNOPEN -->
                <nav class="row pull-down">
                    <!-- knopen links -->
                    <p class="col-xs-1 navbar-text">Selectie: </p>
                    <div class="col-xs-10">
                    <ul class=" row nav navbar-nav">
                        <li class="col-xs-4"><button type="submit" class="btn btn-default" formaction="{{app.root}}/testadmin/inactive">Maak Inactief</button></li>
                        <li class="col-xs-4"><button type="submit" class="btn btn-default" formaction="{{app.root}}/testadmin/active">Maak Actief</button></li>
                        <li class="col-xs-4"><button type="submit" class="btn btn-primary" formaction="{{app.root}}/testadmin/testcreation/">Maak nieuwe test</button></li>
                    </ul>
                    </div>
                </nav>
        </div>
    </form>
</div>



{% endblock content %}
