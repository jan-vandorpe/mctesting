{% extends "template/layout.html.twig" %}

{% block title %}
{{ parent() }}Nieuwe vraag
{% endblock %}

{% block content %}
<h1 class="headerupdates maincontainer">
            Vraag Toevoegen
        </h1>
        <div class="container-fluid maincontainer">
            <form name="toevoegenvraag" method="post" action="/mctesting/question/add">
                <div class="input-group nieuwimg">
                    <span class="input-group-addon">
                        Subcategorie:
                    </span>
                    <select class="form-control catbijvraag" name="subcat">
                        {% for category in categories %}
                            <optgroup label="{{category.catname}}">
                            {% for subcategory in category.subcategories %}
                                <option value="{{subcategory.id}}">{{subcategory.subcatname}}</option>
                            {% endfor %}
                            </optgroup>
                        {% endfor %}
                    </select>
                </div>
                <div class="input-group nieuwimg">
                    <span class="input-group-addon">
                        Vraag:
                    </span>
                    <textarea name="vraag" class="form-control vraaginput">Vul hier uw vraag in</textarea>
                </div>
            
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon">
                        Moeilijkheidsgraad:
                    </span>
                    <input type="number" name="gewicht" class="form-control" value="1" />
                </div>
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon">
                        Antwoord 1:
                    </span>
                    <input type="text" name="antwoord[]" class="form-control" placeholder="vul hier een antwoord in." />
                </div>
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon">
                        Antwoord 2:
                    </span>
                    <input type="text" name="antwoord[]" class="form-control" placeholder="vul hier een antwoord in." />
                </div>
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon">
                        Antwoord 3:
                    </span>
                    <input type="text" name="antwoord[]" class="form-control" placeholder="vul hier een antwoord in." />
                </div>
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon">
                        Antwoord 4:
                    </span>
                    <input type="text" name="antwoord[]" class="form-control" placeholder="vul hier een antwoord in." />
                </div>
            
                <div class="input-group nieuwimg">
                    <span class="input-group-addon">
                        Afbeeldingen:
                    </span>
                    <input type="file" name="media[]" class="form-control" multiple="true" />
                </div>
                <div class="input-group nieuwimg">
                    <span class="input-group-addon">
                        Correct antwoord:
                    </span>
                    <select class="form-control catbijvraag" name="correctant">
                        <option value="0">Antwoord 1</option>
                        <option value="1">Antwoord 2</option>
                        <option value="2">Antwoord 3</option>
                        <option value="3">Antwoord 4</option>
                    </select>
                </div>
                
                <div class="input-group centeren">
                    <input type="submit" class="form-control" name="vrtoev" value="Vraag toevoegen" />
                </div>
            </form>
        </div>
{% endblock %}