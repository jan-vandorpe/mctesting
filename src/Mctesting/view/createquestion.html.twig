{% extends "template/layout.html.twig" %}
{%block scripts%}
    {{parent()}}
<script src="\mctesting\public\js\tinymce\tinymce.min.js"></script>
<script>tinymce.init({menubar : false, toolbar : "", statusbar : false,selector:'textarea.allowcode', paste_as_text: true});</script>
    

{%endblock%}
{% block title %}
{{ parent() }}Nieuwe vraag
{% endblock %}

{% block content %}
<h1 class="headerofpage">
    Vraag Toevoegen
</h1>
<div class="container-fluid">
    <form name="toevoegenvraag" method="post" action="/mctesting/question/add">
        <div class="input-group nieuwimg">
            <span class="input-group-addon widthvraaginput">
                Subcategorie:
            </span>
            <select class="form-control catbijvraag" name="subcat">
                        {% for category in categories %}
                    <optgroup label="{{category.catname}}">
                            {% for subcategory in category.subcategories %}
                            <option value="{{subcategory.id}}">{{subcategory.subcatname}}</option>
                            {% endfor %}
                        </optgroup>
                        {% endfor %}
                    </select>
                </div>
                <div class="input-group nieuwimg">
                    <span class="input-group-addon widthvraaginput">
                        Vraag:
                    </span>
                    <textarea name="vraag" class="form-control allowcode vraaginput" placeholder="Vul hier uw vraag in."></textarea>
                </div>

                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon widthvraaginput">
                        Moeilijkheidsgraad:
                    </span>
                    <input type="number" name="gewicht" class="form-control" value="1" />
                </div>
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon widthvraaginput">
                        Antwoord 1:
                    </span>
                    <textarea name="antwoord[]" class="form-control allowcode" placeholder="vul hier een antwoord in."></textarea> 
                </div>
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon widthvraaginput">
                        Antwoord 2:
                    </span>
                    <textarea name="antwoord[]" class="form-control allowcode" placeholder="vul hier een antwoord in."></textarea> 
                </div>
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon widthvraaginput">
                        Antwoord 3:
                    </span>
                    <textarea name="antwoord[]" class="form-control allowcode" placeholder="vul hier een antwoord in."></textarea> 
                </div>
                <div class="input-group nieuwantwoord">
                    <span class="input-group-addon widthvraaginput">
                        Antwoord 4:
                    </span>
                    <textarea name="antwoord[]" class="form-control allowcode" placeholder="vul hier een antwoord in."></textarea> 
                </div>

                <div class="input-group nieuwimg">
                    <span class="input-group-addon widthvraaginput">
                        Afbeeldingen:
                    </span>
                    <input type="file" name="media[]" class="form-control" multiple="true" />
                </div>
                <div class="input-group nieuwimg">
                    <span class="input-group-addon widthvraaginput">
                        Correct antwoord:
                    </span>
                    <select class="form-control catbijvraag" name="correctant">
                        <option value="0">Antwoord 1</option>
                        <option value="1">Antwoord 2</option>
                        <option value="2">Antwoord 3</option>
                        <option value="3">Antwoord 4</option>
                    </select>
                </div>

                <div class="input-group centeren">
                    <input type="submit" class="form-control" name="vrtoev" value="Vraag toevoegen" />
                </div>
            </form>
        </div>
{% endblock %}