{% extends "template/layout.html.twig" %}

{% block title %}
    {{ parent() }}Rapport scores - Select session
{% endblock title %}

{% block contentHeader %}
    <div class="panel-heading">
        <h1>
            Scores rapport
            <br>
        </h1>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100" style="width: 66%;">
                <span>stap 2 van 3</span>
            </div>
        </div>
        <form name="" class="form-horizontal" action="{{ app.root }}/scores/showsessiondetail/" method="post">        
            <div class="form-group">
                <label for="subcat" class="col-xs-3 control-label">Selecteer sessie:</label>
                <div class="col-xs-9">
                    <select class="form-control" name="selectsession">
                        {% for testsession in testsessions %}
                            <option value="{{testsession.id}}">{{ testsession.date.date|date('d/m/Y') }}</option>
                        {% endfor %}
                    </select>
                </div>        
            </div>
            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9">
                    <button type="submit" name="gebrknop" class="btn btn-success">Naar stap 3 <span class="glyphicon glyphicon-chevron-right"></span></button>
                    
                </div>
            </div>
        </form>    
                    {% block terugknop %}
      <div class="form-group no-print">
        <div class="col-xs-offset-1">
          <form class="form-horizontal" method="post" action="{{ app.root }}/scores/selecttest">
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Terug</button>
          </form>
        </div>
      </div>
    {% endblock %}
    </div>
{% endblock content %}