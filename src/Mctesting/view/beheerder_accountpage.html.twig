{% extends "template/layout.html.twig" %}

{% block title %}
    {{ parent() }}Gebruiker - Details
{% endblock title %}

{% block contentHeader %}
    <div class="panel-heading">
        <h1>
            Account details
            <br>
        </h1>
    </div>
{% endblock %}
{% block content %}
    <div class="container-fluid">  
        <div class="panel panel-default">
            <div class="panel-heading">Account overzicht</div>
            <form name="behtoev" id="behtoev" class="form-horizontal"  action="{{ app.root }}" method="post">
                <div class="panel-body">
                    <div class="form-group">
                        <label for="rrnr" class="col-xs-3 control-label overflow">Rijksregisternummer:</label>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" name="rrnr" id="rrnr" value="{{user.RRnr}}" readonly/>
                        </div>  
                    </div>
                    <div class="form-group">
                        <label for="fnaam" class="col-xs-3 control-label">Familienaam:</label>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" name="fnaam" id="fnaam" value="{{user.lastName}}" required/>
                        </div>  
                    </div>
                    <div class="form-group">
                        <label for="vnaam" class="col-xs-3 control-label">Voornaam:</label>
                        <div class="col-xs-9">
                            <input type="text" class="form-control" name="vnaam" id="vnaam" value="{{user.firstName}}" required/>
                        </div>  
                    </div>

                    <div class="form-group">
                        <label for="rrnr" class="col-xs-3 control-label">Emailadres:</label>
                        <div class="col-xs-9">
                            <input type="email" class="form-control" name="email" id="email" value="{{user.email}}" data-bv-emailaddress-message="Voer een geldig emailadres in" required/>
                        </div>  
                    </div>
                    <div class="form-group">
                        <div class=col-xs-12">                            
                            <div class="col-xs-offset-3 col-xs-3">
                                <input type="submit" name="gebrknop" class="btn btn-success" value="Account aanpassen">
                            </div>
                            <div class="col-xs-6 text-right">

                            </div>
                        </div>
                    </div>
            </form>
        </div>        
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Wachtwoord wijzigen</div>
        <form name="wijzigww" id="wijzigww" class="form-horizontal"  action="{{ app.root }}/usermanagement/changepassword/" method="post">
            <div class="panel-body">
                <div class="form-group">
                    <label for="wachtwoord1" class="col-xs-3 control-label overflow">Wachtwoord:</label>
                    <div class="col-xs-9">
                        <input type="hidden" class="form-control" name="rrnr" id="rrnr" value="{{user.RRnr}}" readonly/>
                        <input type="text" class="form-control" name="wachtwoord1" id="wachtwoord1" required/>
                    </div>  
                </div>
                <div class="form-group">
                    <label for="wachtwoord2" class="col-xs-3 control-label">Wachtwoord opnieuw:</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control" name="wachtwoord2" id="wachtwoord2" required/>
                    </div>  
                </div>                
                <div class="form-group">
                    <div class=col-xs-12">                            
                        <div class="col-xs-offset-3 col-xs-3">
                            <input type="submit" name="gebrknop" class="btn btn-success" value="Wachtwoord aanpassen">
                        </div>                        
                    </div>
                </div>
        </form>
    </div>        
</div>

<form name="gebrtoev" class="form-horizontal" action="" method="post">
    <div class="form-group">
        <div class="col-xs-offset-1">
            <button type="submit" class="btn btn-default" formaction="{{ app.root }}"><span class="glyphicon glyphicon-arrow-left"></span> Terug</button>
        </div>
    </div>
</form>
</div>
{% endblock content %}