    {% block login %}
        <div class="container-fluid maincontainer">
            <nav>
                <div class="collapse navbar-collapse">
                    {% if app.user is defined and app.user is not empty %}
                        {% if app.user.group.name == 'admin' %}
                            {# Admin topnav menu #}
                            {#
                            <ul class="nav navbar-nav">
                                <li><a href="/mctesting/tests/go">Tests</a></li>
                                <li><a>Vragen</a></li>
                                <li><a href="/mctesting/usermanagement/newuserform">Gebruikers</a></li>
                                <li><a>Beheerders</a></li>
                            </ul>
                            #}
                        {% elseif app.user.group.name == 'beheerder' %}
                            {# Beheerder topnav menu #}
                            {#
                            <ul class="nav navbar-nav">
                                <li><a href="/mctesting/tests/go">Tests</a></li>
                                <li><a>Vragen</a></li>
                                <li><a href="/mctesting/usermanagement/newuserform">Gebruikers</a></li>
                            </ul>
                            #}
                        {% else %}
                            {# Gebruiker topnav menu #}
                            <ul class="nav navbar-nav">
                                <li><a>Test BeÃ«indigen</a></li>
                            </ul>
                        {% endif %}
                        {# Login form #}
                        <form class="navbar-form navbar-right" role="logout" action="/mctesting/login/logout" method="post">
                            Ingelogd als <a href="#" class="navbar-link">{{app.user.firstName}} {{app.user.lastName}}</a>
                            <button type="submit" class="btn btn-default">Uitloggen</button>
                        </form>                 
                    {% else %}
                        <form class="navbar-form navbar-right" role="login" action="/mctesting/login/login" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Login" name="Login" required>
                                <input type="password" class="form-control" placeholder="Wachtwoord" name="Wachtwoord" required>
                            </div>
                            <button type="submit" class="btn btn-default">Inloggen</button>
                        </form>
                    {% endif %}
                    </div>
                </nav>
        </div>
    {% endblock login %}

    {#------ SIDE MENU ---------------#}
    <div class="container-fluid maincontainer clearFix">
        {% block sidenav %}
                {% if app.user is defined and app.user is not empty %}
                    {% if (app.user.group.name == 'admin' or app.user.group.name == 'beheerder') %}
                        <nav class="menu_on_left">
                            <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav nav-stacked">
                                    <li class="menuheader">Gebruikers</li>
                                    <li><a href="/mctesting/usermanagement/newuserform">Aanmaken</a></li>
                                    <li><a href="/mctesting/usermanagement/listusers">Beheren</a></li>
                                    <li class="menuheader">Tests</li>
                                    <li><a href="#">Aanmaken</a></li>
                                    <li><a href="#">Beheren</a></li>

                                {% if app.user.group.name == 'admin' %}
                                    <li class="menuheader">Beheerders</li>
                                    <li><a href="#">Aanmaken</a></li>
                                    <li><a href="#">Beheren</a></li>
                                {%endif%}
                                </ul>
                            </div>
                        </nav>
                    {% endif %}
                {% endif %}

        {% endblock sidenav %}

        {#------ CONTENT ---------------#}
        <div class="content clearFix">
            {% block content %}{% endblock content%}
        </div> 
    </div>
            
    {#------ FOOTER ----------------#}
    <div class="footer headerpage maincontainer">
        {% block footer %}
            <p>&copy; vdab - 2014</p>
        {% endblock %}
    </div>
{% endblock %}

