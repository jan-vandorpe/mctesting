{% extends "template/layout.html.twig" %}

{% block title %}
    {{ parent() }}Rapport scores - Select test
{% endblock title %}

{% block contentHeader %}
    <div class="panel-heading">
        <h1>
            Scores rapport
            <br>
        </h1>
    </div>
{% endblock %}        

{% block content %}
    <div class="container-fluid">           
        <form name="" class="form-horizontal" action="{{ app.root }}/scores/showsessions/" method="post">  
            <div class="panel panel-default">
                <div class="panel-heading">Test aanpassen</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="subcat" class="col-xs-3 control-label">Selecteer een test:</label>
                        <div class="col-xs-9">
                            <select class="form-control" name="selecttest">
                                {% if tests is empty %}
                                    <option value="">Geen testen gevonden</option>
                                {% else %}
                                    {% for test in tests %}
                                        <option value="{{ test.testid }}">{{ test.testname }}</option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                        </div>        
                    </div>
                    <div class="form-group">
                        <div class="col-xs-offset-3 col-xs-9">
                            <input type="submit" name="gebrknop" class="btn btn-success" value="Test aanpassen" {% if tests is empty %}Disabled{% endif %}>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <form name="" class="form-horizontal" action="{{ app.root }}/scores/showsessiondetail/" method="post"> 
            <div class="panel panel-default">
                <div class="panel-heading">Sessie aanpassen</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="subcat" class="col-xs-3 control-label">Selecteer een sessie:</label>
                        <div class="col-xs-9">
                            <select class="form-control" name="selectsession">
                                {% if testsessions is empty %}
                                    <option value="">Geen sessies gevonden</option>
                                {% else %}
                                {% for testsession in testsessions %}
                                    <option value="{{testsession.id}}">{{ testsession.date.date|date('d/m/Y') }} - {{testsession.test.testName}}</option>
                                {% endfor %}
                                {% endif %}
                            </select>
                        </div>        
                    </div>
                    <div class="form-group">
                        <div class="col-xs-offset-3 col-xs-9">
                            <input type="submit" name="gebrknop" class="btn btn-success" value="Sessie aanpassen" {% if testsessions is empty %}Disabled{% endif %}>
                        </div>
                    </div>
                </div>
            </div>
        </form>    
    </div>
{% endblock content %}