{% extends "template/layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ app.root }}/public/css/datepicker.css" />
{% endblock stylesheets %}

{% block title %}
    {{ parent() }}Home
{% endblock title %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ app.root }}/public/js/lib/bootstrap-datepicker.js"></script>
    <script src="{{ app.root }}/public/js/datepicker.js"></script>

{% endblock scripts %}


{% block content %}
    <div class="container-fluid ">
        <h1 class="headerofpage">Testsessie plannen</h1>
    </div>
    <div class="testsessieplannen">
        <h4>Het plannen van een testsessie</h4>


        <form name="testsessiesel" id="testsessiesel" class="form-horizontal meerboven-onder" method="POST" action="{{ app.root }}/testadmin/testlinkadd">
            <div class="form-group col-md-7">
                <div class="input-group">            

                    <span class="input-group-addon widthcatinput">Selecteer een test:</span>
                    <select class="form-control" name="testsetselect">
                        <option value="0" >Selecteer een test:</option>
                        {% for key,value in allTest %}  
                            <optgroup label="{{ key }}">
                                {% for test in value %}                

                                    <option value="{{ test.testid }}">{{ test.testname }} - vragen: {{ test.testquestioncount }}</option>
                                {% endfor %}
                            </optgroup>
                        {% endfor %}
                    </select>
                </div>
            </div>
            {% if errormsg is defined and errormsg is not empty  %}
                <span class="error">{{ errormsg }}</span> 
            {% endif %}
            <div class="form-group col-md-7">
                <div class="input-group date">
                    <span class="input-group-addon widthcatinput">Datum van de testsessie:</span>

                    <input type="text" class="form-control" id="ctrlDatePicker" name="testdatum" id="testdatum" placeholder="dd/mm/yyyy">

                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>

                </div>

            </div>
            <div class="form-group col-md-7">
                <div class="input-group">
                    <span class="input-group-addon widthcatinput">Wachtwoord van de testsessie:</span>

                    <input type="text" class="form-control col-md-5" name="testwachtwoord" id="testwachtwoord" placeholder="Vul hier het wachtwoord in." required/>
                </div>
            </div>
            <div class="form-group col-md-12">
                <div class="lighter gebrcollectie">
                    <div class="input-group gebraddon">
                        <div class="input-group-addon ">Gebruikers: </div>
                    </div>

                    {% for user in allUsers %} 
                        <div class="input-group ietssmaller">
                            <span class="input-group-addon">
                                <input type="checkbox" name='user[]' value='{{ user.rrnr }}'/>
                            </span>
                            <div class=" form-control">
                                <div class="vnaamaantest">{{ user.lastname }}</div>
                                <div class="vnaamaantest">{{ user.firstname }}</div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="input-group">
                <div class="ietssmaller">
                    <input type="submit" name="catknop" class="form-control marginonbutton" >
                </div>
            </div>
        </form>
    </div>


{% endblock content %}
