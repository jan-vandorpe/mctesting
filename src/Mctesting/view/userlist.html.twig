{% extends "template/layout.html.twig" %}

{% block stylesheets %}
    {{parent()}}

{% endblock stylesheets %}

{% block title %}
    {{ parent() }}Home
{% endblock title %}


{% block content %}
    <div class="container-fluid ">
        <h1 class="headerofpage">Beheer gebruikers</h1>
    </div>
    <div class="container-fluid ">
        <form name="testtebewerken" action="{{app.root}}/usermanagement/changeuserstatus" method="post" id="userForm">


            <div class="headergebroverzicht">
                <!-- header boven de gebr info-->
                <div class="row onderheadertebewerken form-control">
                    <div class="col-xs-3">Familienaam</div>
                    <div class="col-xs-3">Voornaam</div>
                    <div class="col-xs-3">Rijksreg Nr</div>
                    <div class="col-xs-2"></div>
                </div>
            </div>


            <!-- gebr VOORBEELD IN OVERZICHT -->
            {% for user in allUsers %}   
                <div class="input-group">
                    <span class="input-group-addon">
                        <input type="checkbox" name="userCheckbox[]" value="{{user.rrnr}}" />
                    </span>
                    <div class="row gebruiktebewerken form-control">

                        <div class="col-xs-3">{{user.lastname}}</div>
                        <div class="col-xs-3">{{user.firstname}}</div>
                        <div class="col-xs-3">{{user.rrnr}}</div>
                        {% if user.status == 1 %}
                            <div class="col-xs-2">Actief</div>
                        {% else %}
                            <div class="col-xs-2">Inactief</div>
                        {% endif %}

                    </div>
                </div>
            {% endfor %}


            <!-- DE BEWERKINGSKNOPEN -->
            <div>
                <nav>
                    <div>
                        <!-- knopen links -->
                        <p class="navbar-text">Selectie: </p>
                        <ul class="nav navbar-nav">
                            <li><button type="submit" class="btn btn-default" formaction="{{app.root}}/usermanagement/inactive">Maak Inactief</button></li>
                            <li><button type="submit" class="btn btn-default" formaction="{{app.root}}/usermanagement/active">Maak Actief</button></li>
                            <li><button type="submit" class="btn btn-default" formaction="{{app.root}}/usermanagement/delete">Verwijder</button></li>
                        </ul>
                        <!-- knopen rechts -->
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{app.root}}/usermanagement/newuserform">Maak nieuwe gebruiker</a></li>
                        </ul>
                    </div>
                </nav>
            </div>
        </form>
    </div>

{% endblock content %}
