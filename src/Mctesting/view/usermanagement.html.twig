{%extends "template/layout.html.twig"%}

{%block stylesheets%}
    {{parent()}}

{%endblock%}

{%block title%}
    {{parent()}}Home
{%endblock%}


{%block content%}
<div class="container-fluid maincontainer">
    <h1 class="headerpage">Welkom op de testing website van de VDAB</h1>
</div>
<div class="gebruikertoevoegen centeren">
    <p>Maak hier een nieuwe basisgebruiker aan.</p>
    
                <form name="gebrtoev" class="form-horizontal meerboven-onder" action="/mctesting/usermanagement/newUser" method="post">
                    <div class="form-group">
                        <div class="col-lg-1"></div>
                        <label for="fnaam" class="col-lg-2 control-label">Familienaam</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="fnaam" id="fnaam" placeholder="Vul hier de familienaam in." required/>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-lg-1"></div>
                        <label for="vnaam" class="col-lg-2 control-label">Voornaam</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="vnaam" id="vnaam" placeholder="Vul hier de voornaam in." required/>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-lg-1"></div>
                        <label for="rrnr" class="col-lg-2 control-label">Rijksregisternummer</label>
                        <div class="col-lg-5">
                            <input type="number" class="form-control" name="rrnr" id="rrnr" placeholder="Vul hier het rijksregisternummer in." minlength="9" maxlength="9" required/>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-lg-3">
                        </div>
                        <div class="col-lg-4 centeren">
                            <input type="submit" name="gebrknop" class="form-control">
                        </div>
                    </div>
                    
                </form>
            </div>

{%endblock%}
