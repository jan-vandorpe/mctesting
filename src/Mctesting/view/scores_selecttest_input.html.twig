{% extends "template/layout.html.twig" %}

{% block title %}
    {{ parent() }}Scores ingeven - Select test
{% endblock title %}

{% block contentHeader %}
    <div class="panel-heading">
        <h1>
            Scores ingeven
            <br>
        </h1>
    </div>
{% endblock %}        

{% block content %}
    <div class="container-fluid">
        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100" style="width: 33%;">
                <span>stap 1 van 3</span>
            </div>
        </div>
        <form name="" class="form-horizontal" action="{{ app.root }}/scores/showsessions/input" method="post">        
            <div class="form-group">
                <label for="subcat" class="col-xs-3 control-label">Selecteer test:</label>
                <div class="col-xs-9">
                    <select class="form-control" name="selecttest">
                        {% if tests is empty %}
                            <option value="">Geen testen gevonden</option>
                        {% else %}
                            {% for test in tests %}
                                <option value="{{ test.testid }}">{{ test.testname }}</option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>        
            </div>
            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9">
                    <input type="submit" name="gebrknop" class="btn btn-success" value="Naar stap 2" {% if tests is empty %}Disabled{% endif %}>
                </div>
            </div>
        </form>
    </div>
{% endblock content %}