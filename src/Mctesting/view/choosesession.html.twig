{% extends "template/layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

{% endblock stylesheets%}

{% block title %}
    {{ parent() }}Home
{% endblock  title %}


{% block content %}
<div class="container-fluid ">
    <h1 class="headerpage">Welkom op de testing website van de VDAB</h1>
</div>
<div class="intropage ">
    {% if app.user is defined and app.user is not empty %}
        <p> U wil een test afleggen als {{ app.user.lastname }}, {{ app.user.firstname }}</p>
        <h4 class="darker intro"><span class="">Kies een sessie:</span></h4> 

            <div class="input-group">
        {% for sessionid,test in session.sessionchoices %}
          {% if session.sessionParticipation[sessionid].participated != 1 %}
                {% for testid, testname in test %}
                  {# If app user hasn't taken test yet, print it #}
                <div><a href='{{ app.root }}/test/runtest/{{ testid }}/{{ sessionid }}' value="{{ sessionid }}">{{ testname }}</a></div>
        {% endfor %}  
                {% endif %}
        {% endfor %}  

            </div>


    {% endif %}    
    </div>    
{% endblock content %}

